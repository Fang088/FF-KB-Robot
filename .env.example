# FF-KB-Robot 环境变量配置
# 知识库机器人项目 - 仅 CLI 模式

# =====================================================
# 项目基础配置
# =====================================================
PROJECT_NAME=FF-KB-Robot
PROJECT_VERSION=0.1.0

# =====================================================
# 数据库配置
# =====================================================
DATABASE_URL=sqlite:///./db/sql_db/kbrobot.db
VECTOR_STORE_PATH=./db/vector_store
VECTOR_STORE_TYPE=chroma
VECTOR_STORE_COLLECTION_NAME=ff_kb_documents

# =====================================================
# LLM 配置 (302.ai API)
# =====================================================
LLM_PROVIDER=openai
LLM_API_KEY=your_302ai_api_key_here
LLM_API_BASE=https://api.302.ai/v1
LLM_MODEL_NAME=gpt-5-nano
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# =====================================================
# Embedding 配置 (302.ai API)
# =====================================================
EMBEDDING_PROVIDER=openai
EMBEDDING_API_KEY=your_302ai_api_key_here
EMBEDDING_API_BASE=https://api.302.ai/v1
EMBEDDING_MODEL_NAME=text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# =====================================================
# 文档处理配置
# =====================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_UPLOAD_SIZE_MB=100

# =====================================================
# LangGraph 配置
# =====================================================
LANGGRAPH_TIMEOUT=60
LANGGRAPH_MAX_ITERATIONS=10

# =====================================================
# 日志配置
# =====================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/ff_kb_robot.log

# =====================================================
# 临时文件配置
# =====================================================
TEMP_UPLOAD_PATH=./data/temp_uploads
PROCESSED_CHUNKS_PATH=./data/processed_chunks

# =====================================================
# 检索配置
# =====================================================
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.5

# =====================================================
# 说明
# =====================================================
# 本项目使用 302.ai API 作为 LLM 和 Embedding 的统一后端
# API 地址: https://api.302.ai/v1
# 使用同一个 API Key 即可
# 仅支持 CLI 命令行交互模式
